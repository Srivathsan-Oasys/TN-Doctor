<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.hmis_tn.doctor.ui.emr_workflow.prescription.ui.dialogFragment.templeteEdit.ManagePreTempAddEditviewModel" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/hmis_background"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight=".9"
                        android:padding="10dp"
                        android:text="@string/manage_template"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView

                        android:id="@+id/closeImageView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight=".1"
                        android:padding="10dp"
                        android:src="@drawable/ic_close_white"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Name"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Description"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Display Order"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:hint="Name*"
                                android:maxLength="25" />

                            <EditText
                                android:id="@+id/edtDescription"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:maxLength="25"
                                android:hint="Description" />


                            <EditText
                                android:id="@+id/autoCompleteTextViewDispalyName"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight=".3"
                                android:gravity="center_vertical"
                                android:hint="Display Order"
                                android:inputType="number"
                                android:maxLength="3"
                                android:paddingLeft="10dp">

                                <requestFocus />
                            </EditText>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Drug Name"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Strength"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Route*"
                                android:textColor="@color/navColor"
                                android:textSize="18sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/autoCompleteTextViewDrugName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:background="@drawable/edit_text_bottom_border"
                                android:drawableRight="@drawable/ic_search_black" />

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/StrengthSpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:hint="Description"
                                tools:ignore="NewApi" />


                            <Spinner
                                android:id="@+id/routeSpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:hint="Description"
                                tools:ignore="NewApi" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1.30"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Frequency*"
                                android:textColor="@color/navColor"
                                android:textSize="18sp"
                                tools:ignore="NewApi" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight=".70"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="Duration"
                                android:textColor="@color/navColor"
                                android:textSize="18sp">

                            </TextView>


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.70"
                                android:fontFamily="@font/poppins_semibold"
                                android:paddingTop="5dp"
                                android:text="Days"
                                android:textColor="@color/navColor"
                                android:textSize="18sp"
                                tools:ignore="NewApi" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1.30"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Instruction"
                                android:textColor="@color/navColor"
                                android:textSize="18sp"
                                tools:ignore="NewApi" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <Spinner
                                android:id="@+id/frequencySpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1.30"
                                tools:ignore="NewApi" />

                            <EditText
                                android:id="@+id/autoCompleteTextViewDuration"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight=".70"
                                android:background="@drawable/edit_text_bottom_border"
                                android:gravity="center_vertical"
                                android:maxLength="2"
                                android:paddingLeft="10dp">

                                <requestFocus />
                            </EditText>


                            <Spinner
                                android:id="@+id/PeriodSpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.70"
                                android:padding="@dimen/_5sdp"
                                tools:ignore="NewApi" />

                            <Spinner
                                android:id="@+id/instructionSpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1.30"
                                tools:ignore="NewApi" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:hint="User"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/share"
                                    android:textColor="@color/navColor"
                                    android:textSize="18sp" />


                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="Layouts"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:buttonTint="@android:color/holo_green_dark"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:text="@string/share_radio1"
                                        android:textSize="16dp" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:buttonTint="@android:color/holo_green_dark"
                                        android:gravity="center"
                                        android:text="@string/share_radio2"
                                        android:textSize="16dp" />

                                </RadioGroup>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:hint="Display Order"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/status"
                                    android:textColor="@color/navColor"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/inactive"
                                        android:textColor="@android:color/black"
                                        android:textSize="16dp" />

                                    <Switch
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:checked="true"
                                        android:thumbTint="@android:color/holo_green_dark" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/active"
                                        android:textColor="@android:color/black"
                                        android:textSize="16dp" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:hint="Test Name"

                                android:orientation="horizontal">


                                <androidx.cardview.widget.CardView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/hmis_background"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:id="@+id/addTemp"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_add"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/poppins"
                                        android:paddingStart="15dp"
                                        android:paddingTop="7dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="7dp"
                                        android:text="Add"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/clear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"

                                    app:cardBackgroundColor="@color/primaryGrey"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_eraser"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/poppins"
                                        android:paddingStart="15dp"
                                        android:paddingTop="7dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="7dp"
                                        android:text="Clear"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="2dp">


                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/view" />


                                    <LinearLayout
                                        android:layout_width="1500dp"
                                        android:layout_height="45dp"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.20"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="S.no"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Drug Name"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.60"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Route"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.60"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Frequency"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Duration"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"

                                            tools:ignore="HardcodedText,RtlSymmetry" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.43"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="period"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.60"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Instruction"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText" />

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.50"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:gravity="center"
                                            android:text="Action"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/view" />


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/zeroStockRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                                </LinearLayout>
                            </HorizontalScrollView>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:backgroundTint="@color/hmis_background"
                            android:hint="Test Name"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/updateTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/secondaryColor"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_black"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="7dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="7dp"
                                    android:text="Update"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                app:cardBackgroundColor="@color/secondaryColor"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_black"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="7dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="7dp"
                                    android:text="Save"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"

                                app:cardBackgroundColor="@color/primaryGrey"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_close_white"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:paddingStart="15dp"
                                    android:paddingTop="7dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="7dp"
                                    android:text="Cancel"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

