<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

<!--        <variable-->
<!--            name="viewModel"-->
<!--            type="com.oasys.digihealth.doctor.ui.nurse_desk.bedmangement.model.view_model.BedManagementViewModel" />-->
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >



                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_above="@+id/ll_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <!--

                                            <HorizontalScrollView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                        -->




                        <LinearLayout
                            android:id="@+id/mainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bed"
                                    android:layout_marginStart="10dp"
                                    android:textSize="@dimen/dr_medium_text"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/navColor">

                                </TextView>




                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/bedManagementAllocationRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Floor Bed"
                                    android:textSize="@dimen/dr_medium_text"
                                    android:layout_marginStart="10dp"

                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/navColor">

                                </TextView>




                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/floorBedRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Room Bed"
                                    android:textSize="@dimen/dr_medium_text"
                                    android:layout_marginStart="10dp"

                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/navColor">

                                </TextView>




                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/roomBedRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                            </LinearLayout>





                        </LinearLayout>
                        <!--



                                            </HorizontalScrollView>



                        -->


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <LinearLayout
                    android:id="@+id/ll_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/outPtientGreen">

                        </LinearLayout>
                        <TextView
                            android:id="@+id/available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/navColor"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/dr_medium_text"
                            android:text="Available">

                        </TextView>
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/grey">

                        </LinearLayout>
                        <TextView
                            android:id="@+id/notavailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/navColor"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/dr_medium_text"
                            android:text=" Not Available">

                        </TextView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dr_medium_text"
                        android:fontFamily="@font/poppins"
                        android:text="Note : Please choose any 2 beds for shuffle">

                    </TextView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="22dp"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/shuffleCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="@color/reports_adult"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:drawableStart="@drawable/ic_shuffle"

                                android:text="Shuffle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="10dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dr_medium_text"
                                tools:ignore="HardcodedText"



                                />
                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/saveCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="@color/secondaryColor"
                            app:cardCornerRadius="5dp">

                            <TextView

                                android:drawableStart="@drawable/ic_save_white"
                                android:padding="5dp"
                                android:text="@string/save"
                                android:layout_gravity="center"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="10dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dr_medium_text"
                                tools:ignore="HardcodedText"


                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/clearCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="@color/primaryGrey"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_close"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="10dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="7dp"
                                android:text="@string/cancel"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dr_medium_text"
                                tools:ignore="HardcodedText"  />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>












    </androidx.drawerlayout.widget.DrawerLayout>


</layout>