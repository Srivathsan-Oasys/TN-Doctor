<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

<!--        <variable-->
<!--            name="viewModel"-->
<!--            type="com.hmis_tn.doctor.ui.pharmacy_management.dispense.viewmodel.PharmacyDispenseViewModel" />-->
    </data>

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="Pharmacy Dispense"
                        android:textColor="@color/hmis_background"
                        android:textSize="@dimen/_15sdp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/view"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="right">

                    <androidx.cardview.widget.CardView
                        android:layout_width="165dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/prescriptionsYellow"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:layout_weight="0.8"
                                android:textSize="12sp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:text="Dispensed"
                                />

                            <TextView
                                android:id="@+id/txtDispensedCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:layout_weight="1.2"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:background="@color/white"
                                android:text="0"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="165dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/consultedPatientsGreen"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:layout_weight="0.8"
                                android:textSize="12sp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:text="Ordered"
                                />

                            <TextView
                                android:id="@+id/txtOrderedCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:layout_weight="1.2"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:background="@color/white"
                                android:text="0"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="4.10">

                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/nestedScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:visibility="visible">

                                        <EditText
                                            android:id="@+id/edtPin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:hint="PIN"
                                            android:inputType="number"
                                            android:maxLines="1"
                                            android:maxLength="14"
                                            android:padding="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textSize="14sp" />

                                        <EditText
                                            android:id="@+id/edtMobileNumber"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:hint="Mobile Number"
                                            android:inputType="number"
                                            android:maxLines="1"
                                            android:maxLength="10"
                                            android:padding="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textSize="14sp" />


                                        <EditText
                                            android:id="@+id/edtExistingPin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:hint="Existing PIN"
                                            android:inputType="number"
                                            android:maxLines="1"
                                            android:maxLength="14"
                                            android:padding="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:gravity="right"
                                        android:orientation="horizontal"
                                        android:paddingEnd="@dimen/_3sdp">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/search"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardBackgroundColor="@color/Skyblue"
                                            app:cardCornerRadius="5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:drawableStart="@drawable/ic_search_white"
                                                android:drawablePadding="10dp"
                                                android:fontFamily="@font/poppins"
                                                android:padding="5dp"
                                                android:text="Search"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"
                                                tools:ignore="HardcodedText" />
                                        </androidx.cardview.widget.CardView>

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/previous"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            app:cardBackgroundColor="@color/colorPrimary"
                                            app:cardCornerRadius="5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:drawableStart="@drawable/ic_search_white"
                                                android:drawablePadding="10dp"
                                                android:fontFamily="@font/poppins"
                                                android:padding="5dp"
                                                android:text="Previous"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"
                                                tools:ignore="HardcodedText" />
                                        </androidx.cardview.widget.CardView>


                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/clear"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            app:cardBackgroundColor="@color/primaryGrey"
                                            app:cardCornerRadius="5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:drawableStart="@drawable/ic_eraser"
                                                android:drawablePadding="10dp"
                                                android:fontFamily="@font/poppins"
                                                android:padding="5dp"
                                                android:text="Clear"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"
                                                tools:ignore="HardcodedText" />
                                        </androidx.cardview.widget.CardView>


                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/dispenseRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_10sdp"
                                        android:scrollbars="horizontal"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



                                    <LinearLayout
                                        android:id="@+id/llDrugs"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:orientation="vertical"
                                        android:layout_margin="@dimen/_10sdp">



                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.20"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:fontFamily="@font/poppins_bold"
                                                android:padding="@dimen/_5sdp"
                                                android:text="Drug List"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp" />
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/view"
                                                />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_marginRight="@dimen/_20sdp"
                                            android:gravity="right">


                                            <androidx.cardview.widget.CardView
                                                android:layout_width="175dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:layout_marginBottom="5dp"
                                                android:visibility="visible"
                                                app:cardBackgroundColor="@color/consultedPatientsGreen"
                                                app:cardCornerRadius="5dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="horizontal"
                                                    android:gravity="center">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:fontFamily="@font/poppins"
                                                        android:gravity="center"
                                                        android:layout_weight="0.8"
                                                        android:textSize="12sp"
                                                        android:paddingEnd="@dimen/_5sdp"
                                                        android:textColor="@color/white"
                                                        android:text="Prescription"
                                                        />

                                                    <TextView
                                                        android:id="@+id/txtPrescriptionCount"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/poppins"
                                                        android:gravity="center"
                                                        android:layout_weight="1.2"
                                                        android:layout_marginLeft="@dimen/_5sdp"
                                                        android:layout_marginRight="@dimen/_5sdp"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp"
                                                        android:background="@color/white"
                                                        android:text="0"
                                                        />

                                                </LinearLayout>


                                            </androidx.cardview.widget.CardView>


                                        </LinearLayout>

                                        <HorizontalScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fillViewport="true">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/view" />

                                            <LinearLayout
                                                android:layout_width="700dp"
                                                android:layout_height="45dp"
                                                android:gravity="center"
                                                android:orientation="horizontal"
                                                android:weightSum="9.5">

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="0.5"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="S.No"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Item Name"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Frequency"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />
                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Duration"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Qty"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />

                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />


                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Instruction"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />


                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Total Qty"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />


                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Batch Qty"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />


                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Batch No"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />


                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/poppins"
                                                    android:gravity="center"
                                                    android:text="Expiry Date"
                                                    android:textColor="@color/black"
                                                    android:textSize="11sp" />


                                                <View
                                                    android:layout_width="2dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/view" />

                                            </LinearLayout>
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/view" />

                                            <androidx.recyclerview.widget.RecyclerView
                                                android:id="@+id/drugsListRecyclerView"
                                                android:layout_width="700dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="10dp"
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:scrollbars="horizontal"
                                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                                        </LinearLayout>
                                        </HorizontalScrollView>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_10sdp"
                                            android:gravity="right"
                                            android:visibility="gone"
                                            android:orientation="horizontal"
                                            android:paddingEnd="@dimen/_3sdp">

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/prev"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:cardBackgroundColor="@color/Skyblue"
                                                app:cardCornerRadius="5dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:drawableStart="@drawable/ic_search_white"
                                                    android:drawablePadding="10dp"
                                                    android:fontFamily="@font/poppins"
                                                    android:padding="5dp"
                                                    android:text="Prev"
                                                    android:textColor="@color/white"
                                                    android:textSize="12sp"
                                                    tools:ignore="HardcodedText" />
                                            </androidx.cardview.widget.CardView>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/dispense"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                app:cardBackgroundColor="@color/colorPrimary"
                                                app:cardCornerRadius="5dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:drawableStart="@drawable/ic_search_white"
                                                    android:drawablePadding="10dp"
                                                    android:fontFamily="@font/poppins"
                                                    android:padding="5dp"
                                                    android:text="Dispense"
                                                    android:textColor="@color/white"
                                                    android:textSize="12sp"
                                                    tools:ignore="HardcodedText" />
                                            </androidx.cardview.widget.CardView>


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/download"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                app:cardBackgroundColor="@color/primaryGrey"
                                                app:cardCornerRadius="5dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:drawableStart="@drawable/ic_download_to_storage_drive"
                                                    android:drawablePadding="10dp"
                                                    android:fontFamily="@font/poppins"
                                                    android:padding="5dp"
                                                    android:text="Download"
                                                    android:paddingRight="@dimen/_5sdp"
                                                    android:textColor="@color/white"
                                                    android:textSize="12sp"
                                                    tools:ignore="HardcodedText" />
                                            </androidx.cardview.widget.CardView>


                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>
                            </androidx.core.widget.NestedScrollView>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:max="100"
                    android:visibility="gone"
                    android:backgroundTint="@color/red"
                    android:indeterminateTint="#1a09d6"
                    android:layout_marginTop="-7dp"/>

            </LinearLayout>
</layout>
