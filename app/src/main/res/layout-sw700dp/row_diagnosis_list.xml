<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/diagnosisMainLinearLayout"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:weightSum="5"
    android:padding="5dp"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/diagnosisSerialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="center"
            android:text="@string/s_no"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
    <TextView
        android:id="@+id/diagnosisTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:gravity="center"
        android:text="ICD 10"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlSymmetry" />



        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

    <TextView
        android:id="@+id/diagnosisCodeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:gravity="center"
        android:text="A01.00"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:layout_width="0dp"
        android:id="@+id/diagnosisautoCompleteTextView"
        android:hint="@string/search_with_3_letters"
        android:fontFamily="@font/poppins"
        android:layout_weight="2.20"
        android:textSize="16sp"
        android:text="jggvhbnmvcbmmbmnmnmnnnjgfxvbnnbbcv"
        android:drawableEnd="@drawable/ic_search"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />





        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.70"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/commentsImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:srcCompat="@drawable/ic_comment_yellow_24dp" />

        <ImageView
            android:id="@+id/diagnosisDeleteImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:srcCompat="@drawable/ic_delete_black" />


    </LinearLayout>
</LinearLayout>