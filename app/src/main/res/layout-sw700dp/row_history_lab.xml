<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/hideLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:padding="5dp"
        app:divider="@drawable/divider_color_white"
        app:showDividers="middle">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:gravity="center"
            android:text="S.No"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:id="@+id/historyLabSerialno"
            tools:ignore="HardcodedText" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.20"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="Date"
            android:id="@+id/historyLabDate"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.90"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Code"
            android:id="@+id/historyLabCode"
            tools:ignore="HardcodedText" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:text="Name"
            android:gravity="center"
            android:id="@+id/historyLabName"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.90"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="@string/Type"
            android:id="@+id/historyLabType"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.50"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Order to Location"
            android:id="@+id/historyLabOrderLocation"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

</LinearLayout>
