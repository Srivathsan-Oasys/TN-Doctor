<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/hideLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        app:divider="@drawable/divider_color_white"
        app:showDividers="middle">
        <TextView
            android:id="@+id/serialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".50"
            android:gravity="center"
            android:padding="5dp"
            android:text="S.No"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />



        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"

            android:padding="5dp"
            android:paddingStart="10dp"
            android:text="Date"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.25"

            android:gravity="center"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/institutionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.50"
            android:gravity="center"

            android:padding="5dp"
            android:paddingStart="10dp"
            android:text="Institution"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:id="@+id/remarksTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:padding="5dp"
            android:paddingStart="10dp"
            android:text="Remarks"
            android:textColor="@color/navColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <ImageView
            android:id="@+id/editSurgeryData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"

            android:padding="5dp"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/ic_edit_blue" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

</LinearLayout>
