<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLinearLayout"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/alternateRow"
     android:padding="10dp">

        <TextView
            android:id="@+id/PresSerialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:fontFamily="@font/poppins"
            android:text="S.No"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="0dp"
            android:id="@+id/PresAutoCompleteTextView"
            android:hint="@string/search_with_3_letters"
            android:fontFamily="@font/poppins"
            android:layout_weight="0.80"
            android:textSize="17sp"
            android:textColor="@color/navColor"
            android:text="jggvhbnmvcbmmbmnmnmnnnjgfxvbnnbbcv"
            android:drawableEnd="@drawable/ic_search"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />




        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <Spinner
            android:id="@+id/route_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.59"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/textViewStrength"
            android:layout_width="0dp"
            android:layout_weight="0.55"
            android:text="100 mg"
            android:gravity="center"
            android:textColor="@color/navColor"
            android:textSize="17sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <Spinner
            android:id="@+id/frequency_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.68"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minusImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_minus" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/durationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="1"
                        android:background="@drawable/background_underline"
                        android:textColor="@color/navColor"
                        android:textSize="17sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/plusImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_add_black" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/durationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


        <TextView
            android:id="@+id/textViewQty"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:text="12"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/navColor"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <Spinner
            android:id="@+id/instruction_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.78"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <ImageView
            android:id="@+id/infoImageView"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.12"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:srcCompat="@drawable/i_icon" />


        <ImageView
            android:id="@+id/commentsImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:srcCompat="@drawable/ic_comment_yellow_24dp" />

        <ImageView
            android:id="@+id/deleteImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:srcCompat="@drawable/ic_bin" />


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>