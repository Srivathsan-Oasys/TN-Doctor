<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/diagnosisMainLinearLayout"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
   android:padding="10dp">
        <TextView
            android:id="@+id/diagnosisSerialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/s_no"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
    <!--<androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/diagnosisCodeAutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:drawableEnd="@drawable/ic_search"
        tools:ignore="HardcodedText,RtlSymmetry" />-->


    <TextView
        android:id="@+id/diagnosisCodeAutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:layout_width="0dp"
        android:id="@+id/diagnosisautoCompleteTextView"
        android:hint="@string/search_with_3_letters"
        android:fontFamily="@font/poppins"
        android:layout_weight="0.35"
        android:textSize="17sp"
        android:textColor="@color/navColor"
        android:text="jggvhbnmvcbmmbmnmnmnnnjgfxvbnnbbcv"
        android:drawableEnd="@drawable/ic_search"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />


    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

    <ImageView
        android:id="@+id/diagnosisDeleteImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        app:srcCompat="@drawable/ic_bin"
        />
</androidx.appcompat.widget.LinearLayoutCompat>