<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.helpdesk.viewmodel.PublicTicketViewModel" />
    </data>

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">


                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/nestedScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                tools:background="#FFFFFF">

                                <EditText
                                    android:id="@+id/edtMobileNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Mobile"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/edtPin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="PIN"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:maxLength="14"
                                    android:padding="10dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:id="@+id/listLayout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:orientation="vertical">

                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="700dp"
                                        android:layout_height="45dp"
                                        android:background="@drawable/edittext_border_white"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:weightSum="11.5">

                                        <RadioButton
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_weight="1">
                                        </RadioButton>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Date"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Institution"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Department"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Type"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/publicRecyclerView"
                                            android:layout_width="700dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:scrollbars="horizontal"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                                    </LinearLayout>

                                    </LinearLayout>
                                    </HorizontalScrollView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@color/dropImage">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:layout_weight="2">
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            app:srcCompat="@drawable/ic_avatar">
                                        </ImageView>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/vendor_details"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/poppins"
                                            android:gravity="left|center_vertical"
                                            android:text="Vendor Name / Mobile Number"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">
                                        </TextView>


                                    </LinearLayout>


                                </LinearLayout>

                                <EditText
                                    android:id="@+id/edtSubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Subject"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/edtDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Description"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="16sp" />

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/autoCompleteTextViewAssignTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/hmis_background"
                                    android:drawableRight="@drawable/ic_search_black"
                                    android:hint="Assign To"
                                    android:textSize="16sp"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp">

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/categorySpinner"
                                        style="@style/Widget.AppCompat.Spinner.Underlined"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="Category"
                                        android:inputType="textNoSuggestions"
                                        android:maxLines="1"
                                        android:padding="5dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textSize="16sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp">

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/subcategorySpinner"
                                        style="@style/Widget.AppCompat.Spinner.Underlined"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="Sub Category"
                                        android:inputType="textNoSuggestions"
                                        android:maxLines="1"
                                        android:padding="5dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textSize="16sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp">

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/prioritySpinner"
                                        style="@style/Widget.AppCompat.Spinner.Underlined"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="Priority"
                                        android:inputType="textNoSuggestions"
                                        android:maxLines="1"
                                        android:padding="5dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textSize="16sp" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:paddingEnd="@dimen/_3sdp">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/save"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardBackgroundColor="@color/outPtientGreen"
                                        app:cardCornerRadius="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/ic_save_white"
                                            android:drawablePadding="10dp"
                                            android:fontFamily="@font/poppins"
                                            android:padding="5dp"
                                            android:text="Save"
                                            android:textColor="@color/white"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText" />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/clear"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        app:cardBackgroundColor="@color/primaryGrey"
                                        app:cardCornerRadius="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/ic_eraser"
                                            android:drawablePadding="10dp"
                                            android:fontFamily="@font/poppins"
                                            android:padding="5dp"
                                            android:text="Clear"
                                            android:textColor="@color/white"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText" />
                                    </androidx.cardview.widget.CardView>


                                </LinearLayout>



                            </LinearLayout>
                            </androidx.core.widget.NestedScrollView>

                </LinearLayout>
            </LinearLayout>
</layout>
