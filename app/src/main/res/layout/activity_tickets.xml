<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.helpdesk.viewmodel.TicketsViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="Tickets"
                        android:textColor="@color/hmis_background"
                        android:textSize="@dimen/_15sdp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/view"
                        />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    android:layout_weight="0.20">
                    <LinearLayout
                        android:id="@+id/above"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_270sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:elevation="@dimen/_5sdp"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp">

                            <LinearLayout
                                android:id="@+id/count_layout"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:background="@color/fadeBlue"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:text="Total Tickets"
                                        android:fontFamily="@font/poppins_bold"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"/>
<!--
                                    <TextView
                                        android:id="@+id/txt_TotalCount"
                                        android:layout_width="100dp"
                                        android:layout_height="35dp"
                                        android:text="10"
                                        android:gravity="center"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:textColor="@color/black"
                                        android:background="@color/white"
                                        android:textSize="16sp"/>-->
                                    <ImageView
                                        android:id="@+id/img_countListArrow"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:tag="close"
                                        app:srcCompat="@drawable/ic_down_arrow_black">

                                    </ImageView>

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/totalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/ip_admission_yellow"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.9"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:text="Tickets"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dr_medium_text" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="3.1"
                                        android:visibility="visible"
                                        app:cardBackgroundColor="@color/prescriptionsYellow"
                                        app:cardCornerRadius="8dp">

                                        <TextView
                                            android:id="@+id/txt_TotalCount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
                                            android:fontFamily="@font/poppins"
                                            android:gravity="center"
                                            android:paddingHorizontal="8dp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dr_small_text"
                                            tools:text="200" />
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/addNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="5dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp">

                                    <ImageView
                                        android:id="@+id/iv_add"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_add">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_toEndOf="@+id/iv_add"
                                        android:fontFamily="@font/poppins"
                                        android:text="Add New Ticket"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dr_medium_text" />


                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/countRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone"
                                android:scrollbars="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="4.10">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/nestedScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="800dp"
                                        android:layout_height="45dp"
                                        android:background="@drawable/edittext_border_white"
                                        android:orientation="horizontal"
                                        android:weightSum="21.5">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="S.No"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Date"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Ticket Id"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Category"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="From Institution"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>
                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Priority"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Status"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Assigned To"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2.5"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="Action"
                                            android:textColor="@color/navColor"
                                            android:textSize="12sp">

                                        </TextView>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/view" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/ticketsRecyclerView"
                                            android:layout_width="800dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:scrollbars="horizontal"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.core.widget.NestedScrollView>
                        </LinearLayout>


                    </HorizontalScrollView>


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:max="100"
                    android:backgroundTint="@color/red"
                    android:indeterminateTint="#1a09d6"
                    android:layout_marginTop="-7dp"/>



                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="0.20"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/outPtientGreen"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_download_white"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:text="Download"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/waitingPatientsBlue"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_download_white"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:text="Upload"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                 <!--   <androidx.cardview.widget.CardView
                        android:id="@+id/addNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/prescriptionsYellow"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_add"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:text="Add New"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>-->

                </LinearLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/searchDrawerCardView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="325dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_favourite_back_arrow"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>


        </FrameLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_45sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="5dp"
                            android:text="Search"
                            android:textSize="21sp"
                            tools:ignore="HardcodedText" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.SearchView
                                android:id="@+id/searchView"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1.0"
                                android:focusable="false"
                                android:inputType="text"
                                android:textSize="12sp"
                                app:iconifiedByDefault="false"
                                app:queryHint="@string/search_with_3_letters" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingEnd="@dimen/_3sdp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/search"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/Skyblue"
                                    app:cardCornerRadius="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_search_white"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/poppins"
                                        android:padding="5dp"
                                        android:text="Search"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/clear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    app:cardBackgroundColor="@color/primaryGrey"
                                    app:cardCornerRadius="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_eraser"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/poppins"
                                        android:padding="5dp"
                                        android:text="Clear"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>


        </com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
