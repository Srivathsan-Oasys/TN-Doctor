<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.emr_workflow.diagnosis.view_model.DiagnosisViewModel"  />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <RelativeLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/favouriteDrawerCardView"
                android:layout_width="50dp"
                android:layout_alignParentEnd="true"
                android:text="FAV"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/semi_rec"
                android:layout_height="25dp">

            </TextView>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/favouriteDrawerCardView"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:orientation="vertical">


                    <TextView
                        style="@style/MobileTextStyle1"
                        android:layout_marginLeft="3dp"
                        android:text="Details"
                        />

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/act_icd"
                        android:hint="ICD 10"
                        style="@style/MobileAutoCompleteStyle1"
                        />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/snomedGt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:cardBackgroundColor="@color/secondaryColor"
                        android:clickable="true"
                        android:layout_gravity="right"

                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_save_white_12"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/poppins"
                            android:padding="7dp"
                            android:text="SNOMED GT"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/rl_add_view"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/favouriteDrawerCardView"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardElevation="4dp"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/rl_header"
                                android:padding="3dp"
                                android:layout_width="match_parent"
                                android:background="@color/blueprintborder"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_click"
                                    android:text="Add Diagnosis"
                                    style="@style/MobileTextStyle1"
                                    >
                                </TextView>

                                <ImageView
                                    android:id="@+id/iv_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/ic_arrow_right"
                                    android:tint="@color/grey"
                                    android:rotation="90"
                                    android:layout_height="wrap_content">
                                </ImageView>
                            </RelativeLayout>





                            <LinearLayout
                                android:id="@+id/ll_drop_down_view"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:paddingBottom="8dp"
                                android:layout_height="wrap_content">


                                <TextView
                                    style="@style/MobileTextStyle3"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/type"
                                    />

                                <EditText
                                    android:id="@+id/diagnosisType"
                                    style="@style/MobileEditText"
                                    android:layout_marginLeft="3dp"
                                    android:focusable="false"
                                    />

                                <TextView
                                    style="@style/MobileTextStyle2"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/code"
                                    />

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/act_code"
                                    android:hint="@string/search_with_3_letters"
                                    style="@style/MobileAutoCompleteStyle1"
                                    />
                                <TextView
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/Dignosis"
                                    style="@style/MobileTextStyle2"
                                    />
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/act_test_name"
                                    android:hint="@string/search_with_3_letters"
                                    style="@style/MobileAutoCompleteStyle1"

                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:layout_marginTop="4dp"
                                    android:layout_height="match_parent">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/add"
                                        android:layout_width="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:layout_height="wrap_content"
                                        app:cardBackgroundColor="@color/hmis_background"
                                        android:clickable="true"
                                        android:focusable="true">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/ic_plus"
                                            android:drawablePadding="7dp"
                                            android:fontFamily="@font/poppins"
                                            android:text="@string/add"
                                            android:paddingLeft="20dp"
                                            android:paddingRight="20dp"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/clear"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardBackgroundColor="@color/primaryGrey"
                                        android:clickable="true"
                                        android:focusable="true">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/ic_eraser"
                                            android:drawablePadding="7dp"
                                            android:paddingRight="20dp"
                                            android:paddingLeft="20dp"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:fontFamily="@font/poppins"
                                            android:text="@string/clear"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            />
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/saveRecyclerView"
                        android:layout_width="match_parent"
                        android:clipToPadding="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_lab_details"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>


                    <LinearLayout
                        android:id="@+id/ll_bottom_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="end"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/saveCardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                app:cardBackgroundColor="@color/secondaryColor"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_white_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="7dp"
                                    android:text="Save"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/clearCardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                app:cardBackgroundColor="@color/primaryGrey"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_eraser_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="7dp"
                                    android:text="Clear"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>




        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="#FFFFFF">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    style="@style/TabTextAppearance.TabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/colorPrimaryDark"
                    app:tabTextColor="@color/black" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </com.google.android.material.navigation.NavigationView>





    </androidx.drawerlayout.widget.DrawerLayout>


</layout>
