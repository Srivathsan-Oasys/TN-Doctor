<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.emr_workflow.certificate.view_model.CertificateViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:padding="10dp"

            app:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded,UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    tools:ignore="RtlHardcoded,UselessParent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/prev_certi"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/closeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_close_white" />
                </LinearLayout>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:animateLayoutChanges="true"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/contentLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                              android:layout_margin="6dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardElevation="2dp">


                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="@color/view" />



                                        <LinearLayout
                                            android:layout_width="600dp"
                                            android:layout_height="35dp"
                                            android:weightSum="5"
                                            android:layout_marginTop="0dp">


                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight=".50"
                                                android:padding="5dp"
                                                android:id="@+id/sNoTextView"
                                                android:text="S No"
                                                android:textSize="15sp"
                                                android:textColor="@color/navColor"
                                                android:fontFamily="@font/poppins_semibold"
                                                android:gravity="center"
                                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/view" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1.50"
                                                android:padding="5dp"
                                                android:id="@+id/textName"
                                                android:fontFamily="@font/poppins_semibold"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="15sp"
                                                android:textColor="@color/navColor"
                                                android:text="@string/date"
                                                android:textAppearance="?android:attr/textAppearanceMedium" />
                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/view" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.20"
                                                android:textSize="15sp"
                                                android:id="@+id/displayOrderTextView"
                                                android:gravity="center"
                                                android:text="@string/certificate_name"
                                                android:fontFamily="@font/poppins_semibold"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textColor="@android:color/black" />
                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/view" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="match_parent"
                                                android:textColor="@color/black"
                                                android:gravity="center"
                                                android:textSize="15sp"
                                                android:text="@string/issued"
                                                android:fontFamily="@font/poppins_semibold"
                                                tools:ignore="HardcodedText" />


                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/view" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="0.80"
                                                android:layout_height="match_parent"
                                                android:textColor="@color/black"
                                                android:gravity="center"
                                                android:textSize="15sp"
                                                android:text="Action"
                                                android:fontFamily="@font/poppins_semibold"
                                                tools:ignore="HardcodedText" />



                                        </LinearLayout>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="@color/view" />


                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/certificateRecyclerView"
                                            android:layout_width="600dp"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </HorizontalScrollView>
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cancelCardView"
                                android:layout_marginTop="10dp"
                                app:cardCornerRadius="8dp"
                                android:focusable="true"
                                android:clickable="true"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/primaryGrey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_close_white_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                  android:padding="7dp"
                                    android:text="Cancel"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/noDataFoundTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="No Data Found!"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>
                </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>