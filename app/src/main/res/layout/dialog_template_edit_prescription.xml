<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.emr_workflow.prescription.ui.dialogFragment.templeteEdit.ManagePreTempAddEditviewModel" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/hmis_background"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight=".5"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="@string/MT_title"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView

                        android:id="@+id/closeImageView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_close_white"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:drawableEnd="@drawable/ic_asterisk"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Name"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:fontFamily="@font/poppins"
                                android:maxLength="25"

                                android:textSize="13sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Description"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edtDescription"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:maxLength="25"
                                android:backgroundTint="@color/hmis_background"
                                android:fontFamily="@font/poppins"

                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Display Order"
                                android:drawableEnd="@drawable/ic_asterisk"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/autoCompleteTextViewDispalyName"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_weight=".3"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:maxLength="3"
                                android:textSize="13sp">

                                <requestFocus />
                            </EditText>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:drawableEnd="@drawable/ic_asterisk"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Drug Name"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/autoCompleteTextViewDrugName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:drawableRight="@drawable/ic_search_black"
                                android:fontFamily="@font/poppins"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Strength"
                                android:textColor="@color/navColor"

                                android:textSize="@dimen/dr_small_text" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/StrengthSpinner"
                                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:focusable="false"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                tools:ignore="NewApi" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:drawableEnd="@drawable/ic_asterisk"
                                android:backgroundTint="@color/hmis_background"
                                android:editable="false"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Route"
                                android:textColor="@color/navColor"

                                android:textSize="@dimen/dr_small_text" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/routeSpinner"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Frequency"
                                android:drawableEnd="@drawable/ic_asterisk"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text"
                                tools:ignore="NewApi" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/frequencySpinner"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:drawableEnd="@drawable/ic_asterisk"
        android:text="Duration"
        android:textColor="@color/navColor"
        android:textSize="@dimen/dr_small_text">

    </TextView>
</RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Period"
                                    android:drawableEnd="@drawable/ic_asterisk"
                                    android:textColor="@color/navColor"
                                    android:textSize="@dimen/dr_small_text"
                                    tools:ignore="NewApi" />
                            </RelativeLayout>




                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/autoCompleteTextViewDuration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="7dp"
                                android:layout_weight="1"
                                android:focusable="true"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textSize="13sp">


                            </EditText>

                            <Spinner
                                android:id="@+id/PeriodSpinner"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Instruction"
                                android:textColor="@color/navColor"

                                android:textSize="@dimen/dr_small_text"
                                tools:ignore="NewApi" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/instructionSpinner"
                                style="@android:style/Widget.Material.Spinner.Underlined"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                tools:ignore="NewApi" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:backgroundTint="@color/hmis_background"
                            android:hint="User"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/share"
                                android:textColor="@color/navColor"

                                android:textSize="@dimen/dr_small_text" />


                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Layouts"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/mySelf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"

                                    android:buttonTint="@color/outPtientGreen"
                                    android:gravity="center"
                                    android:text="@string/share_radio1"
                                    android:textSize="13sp" />

                                <RadioButton
                                    android:id="@+id/myDepartment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/outPtientGreen"
                                    android:gravity="center"
                                    android:text="@string/share_radio2"
                                    android:textSize="13sp" />

                            </RadioGroup>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/hmis_background"
                            android:hint="Display Order"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/status"
                                android:textColor="@color/navColor"
                                android:textSize="@dimen/dr_small_text" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/inactive"
                                    android:textColor="@android:color/black"
                                    android:textSize="13sp" />

                                <Switch
                                    android:id="@+id/switch_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:theme="@style/SwitchTheme" />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/active"
                                    android:textColor="@android:color/black"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="end"
                            android:layout_marginTop="4dp"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/addTemp"
                                android:layout_width="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/hmis_background"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_plus"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/add"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/grey"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_eraser"
                                    android:drawablePadding="7dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/clear"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>




                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/zeroStockRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:backgroundTint="@color/hmis_background"
                            android:hint="Test Name"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/updateTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/secondaryColor"
                                android:focusable="true"
                                android:clickable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_white_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                  android:padding="7dp"
                                    android:text="Update"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardBackgroundColor="@color/secondaryColor"
                                android:focusable="true"
                                android:clickable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_white_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                 android:padding="7dp"
                                    android:text="Save"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardBackgroundColor="@color/primaryGrey"
                                android:focusable="true"
                                android:clickable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_close_white_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                 android:padding="7dp"
                                    android:text="Cancel"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

