<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.emr_workflow.history.allergy.viewmodel.AllergyViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/previewLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/discharge_summary_color"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".90"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingEnd="8dp"
                        android:text="Add New Allergy"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrowImageview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".10"
                        app:srcCompat="@drawable/arrow_black" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/resultLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/white"
                    tools:ignore="MissingDefaultResource">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Date &amp; Time*"
                            android:textColor="@color/navColor"
                            android:textSize="15sp"

                            />

                        <EditText
                            android:id="@+id/etAllergyDateTime"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            android:clickable="false"
                            android:focusable="false"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Type*"
                            android:textColor="@color/navColor"

                            android:textSize="15sp"

                            />

                        <Spinner
                            android:id="@+id/encounterTypeSpinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Name*"
                            android:textColor="@color/navColor"

                            />

                        <Spinner
                            android:id="@+id/allergyNameSpinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Source*"
                            android:textColor="@color/navColor"

                            android:textSize="15sp"

                            />

                        <Spinner
                            android:id="@+id/allergySourceSpinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Severity*"
                            android:textColor="@color/navColor"

                            android:textSize="15sp"

                            />

                        <Spinner
                            android:id="@+id/allergySeveritySpinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1.70"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Duration*"
                                android:textColor="@color/navColor"

                                android:textSize="15sp"

                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight=".7"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Period*"
                                android:textColor="@color/navColor"

                                android:textSize="15sp"

                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1.70"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/minusImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_minus" />

                                <EditText
                                    android:id="@+id/durationTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/background_underline"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:paddingStart="10dp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:text="1"
                                    android:textColor="@color/navColor"
                                    android:textSize="17sp"
                                    tools:ignore="HardcodedText,RtlSymmetry" />

                                <ImageView
                                    android:id="@+id/plusImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_add_black" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/durationRecyclerView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight=".7" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight=".3"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/addNewAllergyIconView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/hmis_background"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/addtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_add_12"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:padding="7dp"
                            android:text="Add"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"

                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/primaryGrey"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_eraser_12"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:padding="7dp"
                            android:text="Clear"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@android:color/white"
                    tools:ignore="MissingDefaultResource">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/contentLinearLayout"
                            android:layout_width="1200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/view" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/hideLayout"
                                android:layout_width="800dp"
                                android:layout_height="35dp"
                                android:weightSum="8"
                                app:divider="@drawable/divider_color_white"
                                app:showDividers="middle">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/s_no"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.50"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Date"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".80"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/type"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:text="@string/allergy"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.20"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/source"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.50"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/duration"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/severity"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/action"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/view" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/allergyRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/row_allergy" />


                        </LinearLayout>

                    </HorizontalScrollView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/noRecordsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Currently no records!!"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </FrameLayout>
</layout>
