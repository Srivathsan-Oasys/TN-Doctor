<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.pharmacy_management.dashboard.viewmodel.PharmacyDashboardViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:fillViewport="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1000dp"
                        android:fitsSystemWindows="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_bold"
                                android:padding="@dimen/_5sdp"
                                android:text="Dashboard"
                                android:textColor="@color/hmis_background"
                                android:textSize="@dimen/_15sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/view" />

                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/reports_patients"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="250dp"
                                        android:layout_height="80dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_5sdp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center_vertical"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Prescribed"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/totalPrescribedCount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.2"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="right|center_vertical"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingBottom="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/totalPrescribedDrugs"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Total Drugs - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                            <TextView
                                                android:id="@+id/totalPrescribedOrders"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:text="Total orders - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/cp"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="250dp"
                                        android:layout_height="80dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_5sdp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center_vertical"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Dispensed"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/totalDispensedCount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.2"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="right|center_vertical"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingBottom="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/totalDispensedDrugs"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Total Drugs - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                            <TextView
                                                android:id="@+id/totalDispensedOrders"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:text="Total orders - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="250dp"
                                        android:layout_height="80dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_5sdp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center_vertical"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Indent Raised"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/totalIndentRaised"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.2"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="right|center_vertical"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingBottom="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/totalIndentPending"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Pending - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                            <TextView
                                                android:id="@+id/totalIndentReceived"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:text="Received - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/configurationOrange"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="250dp"
                                        android:layout_height="80dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_5sdp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.8"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center_vertical"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Essential Drugs"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/totalEssentialCount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.2"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="right|center_vertical"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingBottom="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/totalEssentialDrugs"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:text="Total Drugs - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                            <TextView
                                                android:id="@+id/totalEssentialOrders"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/poppins"
                                                android:gravity="center"
                                                android:text="Total Orders - 0"
                                                android:textColor="@color/white"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </HorizontalScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/lineChartView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_14sdp"
                                app:tabMode="fixed"
                                app:tabTextAppearance="@style/MyCustom"
                                app:tabTextColor="@color/hmis_background" />

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewpager"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/_10sdp"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/favouriteDrawerCardView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_favourite_back_arrow"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/calendarEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/edit_text_bottom_border"
                        android:drawableRight="@drawable/ic_calendar"
                        android:focusable="false"
                        android:hint="Date Range"
                        android:padding="10dp"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/_3sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/Skyblue"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_search_white"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/poppins"
                            android:padding="5dp"
                            android:text="Search"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:cardBackgroundColor="@color/primaryGrey"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_eraser"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/poppins"
                            android:padding="5dp"
                            android:text="Clear"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>


</layout>
