<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="850dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_border_white"
                android:orientation="horizontal"
                android:weightSum="27">

                <TextView
                    android:id="@+id/sNo_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="S.No"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/code_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="code"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/officeName_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Office name"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:id="@+id/patient_office_Name_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Patient Office name"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />
                <TextView
                    android:id="@+id/level_of_office_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Level of office"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/Status_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/dictirct_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Dirtict"
                    android:textColor="@color/navColor"
                    android:textSize="@dimen/dr_small_text">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <ImageView
                    android:id="@+id/imgActionEdit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_edit_blue">
                </ImageView>

                <ImageView
                    android:id="@+id/imgActionView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_view_red">
                </ImageView>

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_delete_appointment">
                </ImageView>


                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="1dp"
                android:background="@color/view" />


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>