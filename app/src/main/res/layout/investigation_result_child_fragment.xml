<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>
        <variable
            name="viewModel"
            type="com.oasys.digihealth.doctor.ui.emr_workflow.investigation_result.view_model.InvestigationResultViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:padding="10dp">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mainLayout"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/calendarEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bottom_border"
                            android:drawableRight="@drawable/ic_calendar"
                            android:hint="Select your date" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:id="@+id/parentLinearLayout"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/activity_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/investigationResultRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:nestedScrollingEnabled="true"
                                tools:ignore="UnusedAttribute" />
                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/noDataText"
                        android:visibility="gone"
                        android:textColor="@color/navColor"
                        android:fontFamily="@font/poppins_bold"
                        android:text="No Data Available">

                    </TextView>

<!--
                    <include
                        android:id="@+id/homeLayoutInclude"
                        layout="@layout/button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
-->



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="22dp"
                        android:gravity="end"
                        android:visibility="gone"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/saveCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            app:cardBackgroundColor="@color/secondaryColor"
                            app:cardCornerRadius="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_next_12"
                                android:drawablePadding="7dp"
                                android:fontFamily="@font/poppins"
                               android:padding="7dp"
                                android:text="Next"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/clearCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:elevation="5dp"
                            app:cardBackgroundColor="@color/primaryGrey"
                            app:cardCornerRadius="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_eraser_12"
                                android:drawablePadding="7dp"
                                android:fontFamily="@font/poppins"
                               android:padding="7dp"
                                android:text="Clear"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </FrameLayout>


    </androidx.drawerlayout.widget.DrawerLayout>


</layout>
