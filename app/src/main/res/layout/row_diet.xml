<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="14">

                <TextView
                    android:id="@+id/serialNumberTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="S.No"
                    android:textColor="@color/navColor"
                    android:textSize="13sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:drawableEnd="@drawable/ic_search"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/search_with_3_letters"
                    android:text="jggvhbnmvcbmmbmnmnmnnnjgfxvbnnbbcv"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <Spinner
                    android:id="@+id/type_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <Spinner
                    android:id="@+id/type_frequency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <ImageView
                    android:id="@+id/deleteImageView"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_bin" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="1dp"
                android:background="@color/view" />


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>