<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="700dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_border_white"
                android:orientation="horizontal"
                android:weightSum="22">

                <TextView
                    android:id="@+id/sNo_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="S.No"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:id="@+id/institution_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Institution"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />
                <TextView
                    android:id="@+id/labname_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Lab Name"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="4.5">

                        <TextView
                            android:id="@+id/maleAdult_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="M"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/view" />
                        <TextView
                            android:id="@+id/femaleAdult_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="F"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/view" />
                        <TextView
                            android:id="@+id/tansgenderAdult_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="TG"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/view" />
                        <TextView
                            android:id="@+id/adultTotal_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Total"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="3.5">

                        <TextView
                            android:id="@+id/maleChild_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:text="M"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/view" />
                        <TextView
                            android:id="@+id/femaleChild_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="F"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/view" />

                        <TextView
                            android:id="@+id/totalChild_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Total"
                            android:layout_weight="1"
                            android:textColor="@color/navColor"
                            android:textSize="12sp"/>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/grandTotal_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Grand Total"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="1dp"
                android:background="@color/view" />


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>