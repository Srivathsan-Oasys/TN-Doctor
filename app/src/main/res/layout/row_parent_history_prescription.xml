<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/parentLayout"
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:background="@color/alternateRow"
            android:weightSum="6"
            app:divider="@drawable/divider_color_white"
            app:showDividers="middle">


            <TextView
                android:id="@+id/sNoTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".50"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="S.No"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/presHistoryDateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Date"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/typeTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".50"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText,RtlSymmetry" />


            <TextView
                android:id="@+id/historyPresdepartmentTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Department"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/prescribedTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Prescribed by"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/institutionTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:drawableRight="@drawable/ic_down_arrow"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Institution"
                android:textColor="@color/navColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:id="@+id/ChildLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DBF3FA"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="1000dp"
                        android:layout_height="35dp"
                        android:background="@color/fadeBlue"
                        android:weightSum="6"
                        app:divider="@drawable/divider_color_white"
                        app:showDividers="middle">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="S.No"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.25"
                            android:drawableRight="@drawable/sort"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:text="Drug Name"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:text="Route"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/sort"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingStart="10dp"
                            android:text="Frequency"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/sort"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Duration"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.50"
                            android:drawableRight="@drawable/sort"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Instruction"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/historyPrescriptionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/row_child_history_prescription" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>