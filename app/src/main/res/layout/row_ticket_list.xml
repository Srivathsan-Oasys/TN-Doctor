<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="800dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_border_white"
                android:orientation="horizontal"
                android:weightSum="21.5">

                <TextView
                    android:id="@+id/sNo_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="S.No"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="created date"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/ticketId_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="ticket Id"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:id="@+id/category_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Category"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />
                <TextView
                    android:id="@+id/institution_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Institution"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/priority_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Priority"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                  android:id="@+id/assigned_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Assigned By"
                    android:textColor="@color/navColor"
                    android:textSize="12sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <ImageView
                    android:id="@+id/imgAction"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_view_red">
                </ImageView>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="1dp"
                android:background="@color/view" />


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>