<?xml version="1.0" encoding="utf-8"?>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/mainLinearLayout"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:divider="@drawable/divider_color_white_bottom"
        app:showDividers="middle">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:divider="@drawable/divider_color_white"
        app:showDividers="middle">




        <TextView
            android:id="@+id/PresSerialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:fontFamily="@font/poppins"
            android:text="S.No"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />




        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="0dp"
            android:id="@+id/PresAutoCompleteTextView"
            android:hint="@string/search_with_3_letters"
            android:fontFamily="@font/poppins"
            android:layout_weight="0.80"
            android:textSize="13sp"
            android:textColor="@color/navColor"
            android:text="jggvhbnmvcbmmbmnmnmnnn"
            android:drawableEnd="@drawable/ic_search"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />






        <Spinner
            android:id="@+id/route_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.69"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textViewStrength"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:text="Aspire 100 mg "
            android:textSize="13sp"
            android:textColor="@color/navColor"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/frequency_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.68"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minusImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_minus" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/durationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="1"
                        android:background="@drawable/background_underline"
                        android:textColor="@color/navColor"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/plusImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_add_black" />

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/durationRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="13dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginBottom="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp" />


            </androidx.core.widget.NestedScrollView>


        </LinearLayout>



        <TextView
            android:id="@+id/textViewQty"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:text="12"
            android:textColor="@color/navColor"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/instruction_spinner"
            android:layout_width="0dp"
            android:layout_weight="0.88"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".46"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoImageView"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:srcCompat="@drawable/i_icon" />


            <ImageView
                android:id="@+id/commentsImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                app:srcCompat="@drawable/ic_comment_yellow_24dp" />


            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                app:srcCompat="@drawable/ic_delete_black" />


        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
