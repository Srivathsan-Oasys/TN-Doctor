<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:divider="@drawable/divider_color_white_bottom"
    app:showDividers="middle">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        app:divider="@drawable/divider_color_white"
        app:showDividers="middle">

        <TextView
            android:id="@+id/serialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.90"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="10dp"
            android:text="S.No"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />


       <!-- <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/codeAutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="10dp"
            android:text="endoscop"
            android:textColor="@color/navColor"
            android:drawableEnd="@drawable/ic_search"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />-->

        <TextView
            android:id="@+id/codeAutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />


        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/background_underline"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/poppins"
            android:hint="@string/search_with_3_letters"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/navColor"
            tools:ignore="HardcodedText" />


        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            />


        <Spinner
            android:id="@+id/tolocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"

            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.70"
            android:gravity="center
"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/commentsImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingEnd="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_comment_yellow_24dp" />


            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                app:srcCompat="@drawable/ic_delete_black" />
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
