<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diagnosisMainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:divider="@drawable/divider_color_white_bottom"
    app:showDividers="middle">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:divider="@drawable/divider_color_white"
        app:showDividers="middle">

        <TextView
            android:id="@+id/diagnosisSerialNumberTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="xcnvv"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

       <!-- <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/diagnosisCodeAutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:drawableEnd="@drawable/ic_search"
            tools:ignore="HardcodedText,RtlSymmetry" />-->

        <TextView
            android:id="@+id/diagnosisCodeAutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />
        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="0dp"
            android:id="@+id/diagnosisautoCompleteTextView"
            android:hint="@string/search_with_3_letters"
            android:fontFamily="@font/poppins"
            android:layout_weight="0.35"
            android:textSize="13sp"
            android:textColor="@color/navColor"
            android:drawableEnd="@drawable/ic_search"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />





        <ImageView
            android:id="@+id/diagnosisDeleteImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:contentDescription="@null"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_delete_black" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>